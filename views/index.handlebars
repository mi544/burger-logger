<div class="flexbox-container">
    <div class="flexbox-item flexbox-item-1">
        <div class="filler-left"></div>
    </div>
    <div class="flexbox-item flexbox-item-2"><img src="/assets/img/burger.png" alt="burger logo" class="burger">
    </div>
    <div class="flexbox-item flexbox-item-3">
        <div class="filler-right"></div>
    </div>
</div>
<div class="flexbox-container">
    <div class="flexbox-item flexbox-item-1-1">
        <div class="flexbox-container-2">
            {{#each items}}
            {{#unless devoured}}
            <div class="flexbox-item flexbox-item-burger">{{burger_name}} <button class="eat-button"
                    data-id={{id}}>Eat</button></div>
            {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="flexbox-item flexbox-item-1-2">
        <div class="flexbox-container-2">
            {{#each items}}
            {{#if devoured}}
            <div class="flexbox-item flexbox-item-burger">{{burger_name}} <button class="delete-button"
                    data-id={{id}}>Delete</button></div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<div class="flexbox-container-3">
    <div class="flexbox-item-textarea">
        <textarea name="add a burger" id="addABurger" cols="70" rows="5" placeholder="Add a new burger"></textarea>
        <div class="flexbox-item-addButton"><button id="addButton">Add</button></div>
    </div>
</div>